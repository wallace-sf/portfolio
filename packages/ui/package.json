  "dependencies": {
    "@repo/utils": "workspace:*",
    "classnames": "^2.5.1",
    "react": "^18",
    "react-tooltip": "^5.28.0",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.3.5"
  }
