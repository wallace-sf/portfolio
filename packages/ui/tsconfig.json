{
  "extends": "@repo/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~control": ["./src/Control/index.ts"],
      "~control/*": ["./src/Control/*"],
      "~hocs": ["./src/hocs/index.ts"],
      "~imagery": ["./src/Imagery/index.ts"],
      "~imagery/*": ["./src/Imagery/*"],
      "~types": ["./src/types.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.ts",
    "tsup.config.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
